<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="App" verbose="1" >

    <parameter name="browser" value="chrome"/>

    <test name="BAT - Integration">
        <parameter name="enabled" value="false"/>
        <classes>
            <class name="test_app.build_acceptance.integration.Connectivity"/>
        </classes>
    </test>

    <test name="BAT - System">
        <classes>
            <class name="test_app.build_acceptance.system.Authentication"/>
        </classes>
    </test>

    <test name="Smoke - Registration (Registration)">
        <classes>
            <class name="test_app.smoke.registration.Registration"/>
        </classes>
    </test>

    <test name="Smoke - Transactions (ShoppingCart)">
        <classes>
            <class name="test_app.smoke.registration.Profile"/>
        </classes>
    </test>

    <test name="Functional (ItemSearch)">
        <classes>
            <class name="test_app.functional.ItemSearch"/>
        </classes>
    </test>

    <test name="Functional (FilterItems)">
        <classes>
            <class name="test_app.functional.FilterItems"/>
        </classes>
    </test>

</suite>
